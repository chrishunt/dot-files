[user]
	name = Chris Hunt
  email = huntca@gmail.com

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = mvim -f

[alias]
  d = diff
  l = log
  s = status -sb
  c = commit
  co = checkout
  w = whatchanged
  a = add -u
  aa = add -A
