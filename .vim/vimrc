" .vimrc

" load up pathogen
call pathogen#infect()
" create helptags
call pathogen#helptags()

" don't need to be compatible with old vim
set nocompatible

" set leader key to comma
let mapleader = ","

" map command-t
" with flush
" map <leader>f :CommandTFlush<cr>\|:CommandT<cr>
" without flush
map <leader>f :CommandT<cr>
" close command-t with C-x
let g:CommandTCancelMap='<C-x>'

" clojure: turn on rainbow parens
let g:vimclojure#ParenRainbow=1

" map Ack
map <leader>a :Ack!<space>

" clear the command line and search highlighting
noremap <C-l> :nohlsearch<CR>

" regenerate ctags
map <leader>rt :!ctags -R --exclude=.git --exclude=log *<CR>

" map %% to current directory
cnoremap %% <C-R>=expand('%:h').'/'<cr>

" show line numbers
set nu

" show row and column in footer
set ruler

" minimum lines above/below cursor
set scrolloff=2

" put useful info in status bar
set statusline=%F%m%r%h%w\ [%l,%c]\ [%L,%p%%]

" always show status bar
set laststatus=2

" show extra space characters
set list listchars=tab:»·,trail:·

" toggle spellcheck with <F5>
:map <F5> :setlocal spell! spelllang=en_us<cr>
:imap <F5> <ESC>:setlocal spell! spelllang=en_us<cr>

" show syntax highlighting
syntax on

" set dark background and colorscheme
" let g:solarized_termcolors=256
set background=dark
colorscheme solarized

" set auto indent
set autoindent
filetype plugin indent on

" set indent to 2 spaces and expand
set ts=2
set shiftwidth=2
set expandtab

" show bracket matches
set showmatch

" ignore case in search
set ignorecase

" highlight all search matches
set hlsearch

" pay attention to case when caps are used
set smartcase

" show search results as I type
set incsearch

" enable mouse support
set mouse=a

" enable visual bell (disable audio bell)
set vb

" enable bash style tab completion
set wildmenu
set wildmode=list:longest,full

" highlight long lines
" highlight OverLength ctermbg=red ctermfg=black guibg=#592929
" match OverLength /\%81v.*/
