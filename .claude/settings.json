{
    "model": "opus",
    "enabledPlugins": {
        "typescript-lsp@claude-plugins-official": true
    },
    "alwaysThinkingEnabled": true,
    "permissions": {
        "allow": [
            "Bash(npm run *)",
            "Bash(git commit *)",
            "Bash(git diff *)",
            "Bash(git status)",
            "Bash(ls *)",
            "Edit",
            "Read",
            "WebSearch",
            "WebFetch"
        ],
        "deny": [
            "Bash(git push *)"
        ]
    }
}
